class Solution {
public:
    int countTriples(int n) {
        int count=0;

        for(int a=1;a<=n;a++){
            for(int b=1;b<=n;b++){
                int total=a*a+b*b;
                int c=sqrt(total);

                if(c*c==total && c<=n)
                count++;
            }
        }

        return count;
    }
};
